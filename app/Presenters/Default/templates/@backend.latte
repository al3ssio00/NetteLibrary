
<!DOCTYPE html>
<html lang="it">
	<!--begin::Head-->
	<head>
		<meta charset="UTF-8">
		<title>{$title}</title>
		<!-- Bootstrap CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<!--end::Head-->
	<!--begin::Body-->
	<body class="bg-light">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container">
				<a class="navbar-brand" n:href="Biblioteca:default">Home</a>
				<div class="collapse navbar-collapse">
				<ul class="navbar-nav">
					<!-- Link sempre visibile per gli admin -->
					{foreach $navbar as $link}
						{if $link['title_control'] === 1}
						
						{else}
							<li class="nav-item">
								<a class="nav-link" n:href="$link['link']">{$link['label']}</a>
							</li>
						{/if}
					{/foreach}
					
					
				</ul>
				</div>
			</div>
		</nav>
			
	{include content}



	{block scripts}
	{/block}

	</body>
	<!--end::Body-->
</html>